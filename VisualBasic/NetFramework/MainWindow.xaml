<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcrylicBlurDemo"
        mc:Ignorable="d"
        Title="Hello Blur!" Height="500" Width="500"
        Background="#01000000"
        AllowsTransparency="True"
        WindowStyle="None"
        BorderThickness="3"
        WindowStartupLocation="CenterScreen"
        BorderBrush="Gray">
    <Grid>
        <Grid>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" Foreground="White" TextAlignment="Center">
            Win32 <LineBreak/>
            Acrylic Blur
                </TextBlock>
                <Label Foreground="White">Opacity:</Label>
                <Slider x:Name="SldOpacity" Minimum="0" Maximum="255" Interval="15" TickPlacement="BottomRight" TickFrequency="15" IsSnapToTickEnabled="True" Margin="2,0,-2,0"></Slider>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
